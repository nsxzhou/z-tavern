# Z Tavern AI Backend Configuration

# Server Configuration
PORT=8080

# Ark AI Model Configuration (字节跳动火山引擎)
# 必需配置：API Key 方式
ARK_API_KEY=your_ark_api_key_here
Model=doubao-pro-32k

# 备选：Access Key/Secret Key 方式（当未提供 ARK_API_KEY 时启用）
# ARK_ACCESS_KEY=your_access_key
# ARK_SECRET_KEY=your_secret_key

# Ark 模型高级配置（可选）
ARK_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
ARK_REGION=cn-beijing
ARK_TEMPERATURE=0.7
ARK_TOP_P=0.9
ARK_MAX_TOKENS=2048
ARK_STREAM=true

# 语音服务配置
# 火山引擎语音服务配置（必需）
SPEECH_APP_ID=your_volcengine_app_id_here
SPEECH_API_KEY=your_volcengine_access_token_here

# 备选：Access Key/Secret Key 方式（当未提供 SPEECH_API_KEY 时启用）
# SPEECH_ACCESS_KEY=your_access_key
# SPEECH_SECRET_KEY=your_secret_key

SPEECH_REGION=cn-beijing
SPEECH_BASE_URL=https://openspeech.bytedance.com
SPEECH_CONCURRENT_MODE=false

# ASR 配置
SPEECH_ASR_MODEL=bigmodel
SPEECH_ASR_LANGUAGE=zh-CN

# TTS 配置
SPEECH_TTS_VOICE=zh_male_M392_conversation_wvae_bigtts
SPEECH_TTS_SPEED=1.0
SPEECH_TTS_VOLUME=1.0
SPEECH_TTS_LANGUAGE=zh-CN

# 语音服务超时 (秒)
SPEECH_TIMEOUT=30

# 注意：
# 1. ARK_API_KEY 或 AK/SK 组合必须提供其一
# 2. Model 字段必须配置为有效的 Ark 模型 ID 或终端节点 ID
# 3. 如果不配置 AI 相关环境变量，服务会跳过 AI 功能，仅保留基础会话能力
# 4. 语音功能为可选，如不需要可不配置相关环境变量